@model Afs.Translator.ViewModels.TranslationUserViewModel
<div class="text-center">
    <h1 class="display-4"></h1>
    <h2>@ViewBag.Title</h2>
    <p class="text-danger">@ViewBag.ErrorMessage</p>
    <hr />
    <div class="translated">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="textToTranslate">
                <label asp-for="TextToTranslate" class="tttLabel"></label>
                <textarea rows="3" cols="70" class="tttInput" asp-for="TextToTranslate"></textarea>
                <span asp-validation-for="TextToTranslate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="RequestDate" class="form-control" />
                <span asp-validation-for="RequestDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="TranslationId" class="form-control" />
                <span asp-validation-for="TranslationId" class="text-danger"></span>
            </div>
            <div class="form-group" id="translated">
                <input type="hidden" asp-for="TranslatedText" class="form-control" value="@Model.TranslatedText" />
                <span asp-validation-for="TranslatedText" class="text-danger"></span>
            </div>
            <div class="block"></div>
            <div class="form-group">
                <input type="submit" value="Translate" class="btn btn-primary" font-size="20"/>
            </div>
        </form>
    </div>
    <div class="block"></div>
    <textarea readonly rows="5" cols="70" class="translated">@Model.TranslatedText</textarea>
    
</textarea>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}